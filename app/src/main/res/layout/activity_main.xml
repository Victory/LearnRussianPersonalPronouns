<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dfhu.learnrussianpersonalpronouns.DrawerFragment">

    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/welcome_fragment"
        android:name="org.dfhu.learnrussianpersonalpronouns.WelcomeFragment" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mainContent"
        >

        <include
            android:id="@+id/myToolbar"
            layout="@layout/toolbar" />

        <fragment
            android:id="@+id/fragmentContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myToolbar"
            android:name="org.dfhu.learnrussianpersonalpronouns.WelcomeFragment"
            tools:layout="@layout/welcome_fragment" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_face_black_24dp"
            app:fab_colorNormal="@color/cold"
            app:fab_colorPressed="@color/hot"
            app:fab_colorRipple="@color/rip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
