<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="true">

    <alpha
        android:interpolator="@android:interpolator/accelerate_decelerate"
        android:fromAlpha="0"
        android:toAlpha="1"
        android:duration="2000"/>

    <rotate
        android:fromDegrees="180"
        android:toDegrees="0"
        android:pivotY="50%"
        android:pivotX="50%"
        android:duration="2000" />
</set>
